<div class="container mt-3">
  <div class="row">
    <div div class="col-md-6">
      <h2>Add new Book form</h2>
      <% if (typeof notif != 'undefined') { %>
        <% notif.forEach(function (alert)  { %>
          <div class="alert alert-danger" role="alert">
            <%= alert.msg %>
          </div>
          <%})%>
      <% } %>  
      <form method="post" action="/customer">
        <div class="form-group">
          <label for="labelname">Title</label> 
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter Name" required /> 
        </div>
        <div class="form-group">
            <label for="labelemail1">Publisher</label>
            <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Enter email" required />
          </div>
        <div class="form-group">
          <label for="mobile">Release date</label>
          <input type="text" class="form-control" id="release_date" name="release_date" placeholder="Enter mobile"required />
        </div>
        <button type="Add book" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>


